
# Supabase
NEXT_PUBLIC_SUPABASE_URL="https://your-project.supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-anon-key"

# Database (Supabase PostgreSQL - use pooler connection for serverless)
DATABASE_URL="postgresql://postgres.[project-ref]:[password]@aws-0-[region].pooler.supabase.com:6543/postgres?pgbouncer=true"
DIRECT_URL="postgresql://postgres:[password]@db.[project-ref].supabase.co:5432/postgres"

# Legacy Auth (can be removed after migration verified)
JWT_SECRET="your-super-secret-jwt-key"
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Payments (Flouci)
FLOUCI_API_URL="https://developers.flouci.com/api"
FLOUCI_APP_ID="your_flouci_app_public_key"
FLOUCI_APP_SECRET="your_flouci_app_secret"

# Email (SendGrid)
SENDGRID_API_KEY="SG.your_api_key"

# Storage (AWS S3)
AWS_ACCESS_KEY_ID="your_access_key"
AWS_SECRET_ACCESS_KEY="your_secret_key"
AWS_BUCKET_NAME="storepulse-images"
AWS_REGION="eu-west-3"
